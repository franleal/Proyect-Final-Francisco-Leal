<h1>nuestros productos</h1>


<div class="row">
  {{#each allproduct}}
        <div class="card card-css" style="width: 18rem;">
            <img src="{{thumbnail}}"class="card-img-top" alt="..."> 
            <a href="/products/edit/{{_id}}"><i class="fa-solid fa-pen-to-square"></i></a>
            <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
            <form action="/products/delete/{{_id}}?_method=DELETE" method="post">
              <input type="hidden" name="_method" value="DELETE" />
              <button class="btn btn-danger" type="submit"><i class="fa-solid fa-trash"></i> </button>
            </form>
             <form action="/addInCart/{{_id}}" method="POST">
                <input type="hidden" id="title" name="title"  value="{{title}}"/>
                <input type="hidden" id="price" name="price"  value="{{price}}"/>
                <input type="hidden" id="thumbnail" name="thumbnail"  value="{{thumbnail}}"/>
                <input type="hidden" id="description" name="description"  value="{{description}}"/>
                <input type="hidden" id="category" name="category"  value="{{category}}"/>
                <button class="btn btn-success" type="submit"><i class="fa-solid fa-cart-shopping"></i> </button>
            </form>
  
            </div>
        </div>
  {{/each}}
</div>